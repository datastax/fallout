                                                           id="dockerRegistryCredTable">
                                                        <thead>
                                                        <tr>
                                                            <th>Docker Registry</th>
                                                            <th>Username</th>
                                                            <th>Actions</th>
                                                        </tr>
                                                        </thead>
                                                        {{#dockerRegistryCredentials}}
                                                            <tbody>
                                                            <td>{{dockerRegistry}}</td>
                                                            <td>{{username}}</td>
                                                            <td>
                                                                <a title="Delete Credentials"
                                                                   class="btn btn-danger btn-xs"
                                                                   onclick="deleteDockerRegistryCred('{{dockerRegistry}}')">
                                                                    <i class="fa fa-trash-o"></i>
                                                                </a>
                                                            </td>
                                                            </tbody>
                                                        {{/dockerRegistryCredentials}}
                                                    </table>
                                                {{/user}}
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.accordion -->
            </div>
            <!-- /.col -->
        </div>
