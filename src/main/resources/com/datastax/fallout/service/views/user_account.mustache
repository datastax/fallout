{{> partials/header}}

{{> partials/menus }}

<!-- Page Content -->
<div id="page-wrapper">
    <div class="container-fluid">
        <h2>User Profile Page</h2>

        <div class="modal fade" id="appCredModal" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <!-- Modal Header -->
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">
                            <span aria-hidden="true">&times;</span>
                            <span class="sr-only">Close</span>
                        </button>
                        <h4 class="modal-title" id="appCredFormLabel">Add Nebula App Credentials</h4>
                    </div>

                    <!-- Modal Body -->
                    <div class="modal-body">
                        <form role="form" id="appCredForm" onsubmit="return false;">
                            <div class="form-group">
                                <label for="projectName">Project Name</label>
                                <input type="text" class="form-control" id="projectName" name="projectName" placeholder="Enter the project name"/>
                            </div>
                            <div class="form-group">
                                <label for="appCredsId">App Creds ID</label>
                                <input type="text" class="form-control" id="appCredsId" name="appCredsId" placeholder="Enter the id"/>
                            </div>
                            <div class="form-group">
                                <label for="appCredsSecret">App Creds Secret</label>
                                <input type="text" class="form-control" id="appCredsSecret" name="appCredsSecret" placeholder="Enter the secret"/>
                            </div>
                        </form>
                    </div>

                    <!-- Modal Footer -->
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary" id="appCredButton">Add</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal fade" id="googleCloudSAModal" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <!-- Modal Header -->
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">
                            <span aria-hidden="true">&times;</span>
                            <span class="sr-only">Close</span>
                        </button>
                        <h4 class="modal-title" id="googleCloudSAFormLabel">Add Google Service Account</h4>
                    </div>

                    <!-- Modal Body -->
                    <div class="modal-body">
                        <form role="form" id="googleCloudSAForm" onsubmit="return false;">
                            <div class="form-group">
                                <label for="googleCloudSAKeyFile">Service Account Key File</label>
                                <input type="text" class="form-control" id="googleCloudSAKeyFile" name="googleCloudSAKeyFile" placeholder="Paste the entire service account json file."/>
                            </div>
                        </form>
                    </div>

                    <!-- Modal Footer -->
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary" id="googleCloudSAKeyButton">Add</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal fade" id="astraCredModal" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <!-- Modal Header -->
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">
                            <span aria-hidden="true">&times;</span>
                            <span class="sr-only">Close</span>
                        </button>
                        <h4 class="modal-title" id="astraCredFormLabel">Add Astra Service Account</h4>
                    </div>

                    <!-- Modal Body -->
                    <div class="modal-body">
                        <form role="form" id="astraCredForm" onsubmit="return false;">
                            <div class="form-group">
                                <label for="astraClientId">Client Id</label>
                                <input type="text" class="form-control" id="astraClientId" name="astraClientId" placeholder="Enter the client Id"/>
                            </div>
                            <div class="form-group">
                                <label for="astraClientName">Client Name</label>
                                <input type="text" class="form-control" id="astraClientName" name="astraClientName" placeholder="Enter the client name"/>
                            </div>
                            <div class="form-group">
                                <label for="astraClientSecret">Client Secret</label>
                                <input type="text" class="form-control" id="astraClientSecret" name="astraClientSecret" placeholder="Enter the client secret"/>
                            </div>
                        </form>
                    </div>

                    <!-- Modal Footer -->
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary" id="astraCredButton">Add</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal fade" id="backupServiceCredModal" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <!-- Modal Header -->
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">
                            <span aria-hidden="true">&times;</span>
                            <span class="sr-only">Close</span>
                        </button>
                        <h4 class="modal-title" id="backupServiceFormLabel">Add Backup Service Credentials</h4>
                    </div>

                    <!-- Modal Body -->
                    <div class="modal-body">
                        <form role="form" id="backupServiceCredForm" onsubmit="return false;">
                            <div class="form-group">
                                <label for="backupServiceName">Name</label>
                                <input type="text" class="form-control" id="backupServiceName" name="backupServiceName"
                                       placeholder="Enter name"/>
                            </div>
                            <div class="form-group">
                                <label for="s3AccessKey">S3 Access Key</label>
                                <input type="text" class="form-control" id="s3AccessKey" name="s3AccessKey"
                                       placeholder="Enter the access key"/>
                            </div>
                            <div class="form-group">
                                <label for="s3SecretKey">S3 Secret Key</label>
                                <input type="text" class="form-control" id="s3SecretKey" name="s3SecretKey"
                                       placeholder="Enter the secret key"/>
                            </div>
                        </form>
                    </div>

                    <!-- Modal Footer -->
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary" id="backupServiceCredButton">Add</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal fade" id="dockerRegistryCredModal" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <!-- Modal Header -->
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">
                            <span aria-hidden="true">&times;</span>
                            <span class="sr-only">Close</span>
                        </button>
                        <h4 class="modal-title" id="dockerRegistryFormLabel">Add Docker Registry Credentials</h4>
                    </div>

                    <!-- Modal Body -->
                    <div class="modal-body">
                        <form role="form" id="dockerRegistryCredForm" onsubmit="return false;">
                            <div class="form-group">
                                <label for="dockerRegistry">Docker Registry</label>
                                <input type="text" class="form-control" id="dockerRegistry" name="dockerRegistry"
                                       placeholder="Enter docker registry address"/>
                            </div>
                            <div class="form-group">
                                <label for="dockerRegistryUsername">Username</label>
                                <input type="text" class="form-control" id="dockerRegistryUsername" name="dockerRegistryUsername"
                                       placeholder="Enter the username"/>
                            </div>
                            <div class="form-group">
                                <label for="dockerRegistryPassword">Password</label>
                                <input type="text" class="form-control" id="dockerRegistryPassword" name="dockerRegistryPassword"
                                       placeholder="Enter the password"/>
                            </div>
                        </form>
                    </div>

                    <!-- Modal Footer -->
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary" id="dockerRegistryCredButton">Add</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            {{> partials/message-area}}
            <form id="profile-form" onsubmit="return false;">
                <div class="col-lg-6">
                    {{#user}}
                    <div class="form-group">
                        <label>Email Address</label>
                        <p class="form-control-static">{{email}}</p>
                    </div>

                    <div class="form-group form-inline">
                        <label for="email-select">Email Notifications</label>
                        <select id="email-select" class="form-control" name="emailPref" required>
                            {{#allEmailNotify}}
                                <option value="{{left.name}}" {{#right}}selected{{/right}}>{{left.prettyName}}</option>
                            {{/allEmailNotify}}
                        </select>
                    </div>
                    <div class="form-group form-inline">
                        <label for="slack-select">Slack Notifications</label>
                        <select id="slack-select" class="form-control" name="slackPref" required>
                            {{#allSlackNotify}}
                                <option value="{{left.name}}" {{#right}}selected{{/right}}>{{left.prettyName}}</option>
                            {{/allSlackNotify}}
                        </select>
                    </div>


                    <div class="form-group">
                        <label>OAuth ID</label>
                        <p class="form-control-static">{{oauthId}}</p>
                    </div>
                    {{/user}}

                    <div class="form-group">
                        <label>User Group</label>
                        <select id="usergroup-select" class="form-control" name="group" required>
                            <option selected disabled>( Select your group )</option>
                            {{#allUserGroups}}
                                <option value="{{name}}" id="usergroup-select-option-{{name}}">{{prettyName}}</option>
                            {{/allUserGroups}}
                        </select>
                        <p class="help-block">This group determines what Openstack / Ironic credentials and tenant are used for launching ctool clusters.</p>
                    </div>
                    {{#user}}
                    <script>
                        $("#usergroup-select-option-{{group}}").prop("selected", true);
                    </script>
                    {{/user}}

                    <div class="form-group">
                        <label>Automaton Shared Handle</label>
                        <input class="form-control" name="automatonSharedHandle" value="{{user.getOrGenerateAutomatonSharedHandle}}">
                        <p class="help-block">Shared handle (usually &lt;username&gt; in &lt;username&gt;@datastax.com). See your automaton.conf file.</p>
                    </div>

                    <button type="button" class="btn btn-primary">Submit</button>
                    <input type="submit" class="btn btn-default" value="Reset OAuth Id" onclick="$.get('/account/reset-oauth', location.reload());"/>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label>Public SSH Key</label>
                        <textarea class="form-control" rows="7" name="publicSshKey">{{#user}}{{publicSshKey}}{{/user}}</textarea>
                        <p class="help-block">This optional PUBLIC ssh key will get added to all ctool clusters, so that you can SSH onto them.</p>
                    </div>
                </div>
            </form>
        </div>
        <!-- /.row -->

        <hr>

        <div class="row">
            <div class="col-md-12">

                <div class="panel">
                    <div class="panel-body">
                        <div class="panel-group" id="accordion">
                            <!--Nebula Credentials-->
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h4 class="panel-title">
                                        <a data-toggle="collapse" data-parent="#accordion" href="#nebula-form-collapse" aria-expanded="false" class="collapsed">Nebula ctool Credentials</a>
                                    </h4>
                                </div>
                                <div id="nebula-form-collapse" class="panel-collapse collapse">
                                    <div class="panel-body" id="appCredTableDiv">
                                        <form id="nebula-profile-form" onsubmit="return false;">
                                            <div class="form-group">
                                                <label>Default Nebula Project</label>
                                                <input id="nebula_project_name" class="form-control" name="nebulaProjectName" {{#user}}value="{{nebulaProjectName}}"{{/user}} readonly>
                                                <p class="help-block">Must match the project of one of the app credentials below. See your automaton.conf file. </p>
                                                <button class="btn btn-primary" data-toggle="modal" data-target="#appCredModal">
                                                    Add App Credentials
                                                </button>
                                                {{#user}}
                                                        <table class="table table-bordered table-striped" id="appCredTable">
                                                            <thead>
                                                            <tr>
                                                                <th>Project</th>
                                                                <th>ID</th>
                                                                <th>Actions</th>
                                                            </tr>
                                                            </thead>
                                                            {{#nebulaAppCreds}}
                                                            <tbody>
                                                            <td>{{project}}</td>
                                                            <td>{{id}}</td>
                                                            <td>
                                                                <a title="Set as Default" class="btn btn-success btn-xs"
                                                                       onclick="setDefaultNebulaAppCreds('{{project}}')">
                                                                    <i class="fa fa-flag"></i>
                                                                </a>
                                                                <a title="Delete Credentials" class="btn btn-danger btn-xs"
                                                                       onclick="deleteNebulaAppCreds('{{project}}', '{{id}}')">
                                                                    <i class="fa fa-trash-o"></i>
                                                                </a>
                                                            </td>
                                                            </tbody>
                                                            {{/nebulaAppCreds}}
                                                        </table>
                                                {{/user}}
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <!--Google Cloud Credentials-->
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h4 class="panel-title">
                                        <a data-toggle="collapse" data-parent="#accordion" href="#googleCloud-form-collapse" aria-expanded="false" class="collapsed">Google Cloud Service Accounts</a>
                                    </h4>
                                </div>
                                <div id="googleCloud-form-collapse" class="panel-collapse collapse">
                                    <div class="panel-body" id="googleCloudTableDiv">
                                        <form id="googleCloud-profile-form" onsubmit="return false;">
                                            <div class="form-group">
                                                <label>Default Google Cloud Service Account</label>
                                                <input id="googleCloud_project_name" class="form-control" name="googleCloudServiceAccount" {{#user}}value="{{defaultGoogleCloudServiceAccountEmail}}"{{/user}} readonly>
                                                <p class="help-block">Must match the email of one of the service accounts below.</p>
                                                <button class="btn btn-primary" data-toggle="modal" data-target="#googleCloudSAModal">
                                                    Add Service Account
                                                </button>
                                                {{#user}}
                                                <table class="table table-bordered table-striped" id="googleCloudTableTable">
                                                    <thead>
                                                    <tr>
                                                        <th>Service Account Email</th>
                                                        <th>Project</th>
                                                        <th>Private Key ID</th>
                                                        <th>Actions</th>
                                                    </tr>
                                                    </thead>
                                                    {{#googleCloudServiceAccounts}}
                                                    <tbody>
                                                    <td>{{email}}</td>
                                                    <td>{{project}}</td>
                                                    <td>{{privateKeyId}}</td>
                                                    <td>
                                                        <a title="Set as Default" class="btn btn-success btn-xs"
                                                               onclick="setDefaultServiceAccount('{{email}}')">
                                                            <i class="fa fa-flag"></i>
                                                        </a>
                                                        <a title="Delete Credentials" class="btn btn-danger btn-xs"
                                                               onclick="deleteServiceAccount('{{email}}')">
                                                            <i class="fa fa-trash-o"></i>
                                                        </a>
                                                    </td>
                                                    </tbody>
                                                    {{/googleCloudServiceAccounts}}
                                                </table>
                                                {{/user}}
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            {{#showOpenstackSection}}
                            <!--Openstack/Ironic Credentials-->
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h4 class="panel-title">
                                        <a data-toggle="collapse" data-parent="#accordion" href="#openstack-ironic-form-collapse" aria-expanded="false" class="collapsed">Openstack / Ironic ctool Credentials</a>
                                    </h4>
                                </div>
                                <div id="openstack-ironic-form-collapse" class="panel-collapse collapse">
                                    <div class="panel-body">
                                        <form id="openstack-ironic-profile-form" onsubmit="return false;">
                                            <div class="form-group">
                                                <label>Openstack/Ironic Username</label>
                                                <input class="form-control" name="openstackUsername" {{#user}}value="{{openstackUsername}}"{{/user}}>
                                                <p class="help-block">Openstack/Ironic username. See your automaton.conf file.</p>
                                            </div>

                                            <div class="form-group">
                                                <label>Openstack/Ironic Password</label>
                                                <input class="form-control" type="password" name="openstackPassword" {{#user}}value="{{openstackPassword}}"{{/user}}>
                                                <p class="help-block">Openstack/Ironic password. See your automaton.conf file.</p>
                                            </div>

                                            <div class="form-group">
                                                <label>Ironic Tenant Name</label>
                                                <input class="form-control" name="ironicTenantName" {{#user}}value="{{ironicTenantName}}"{{/user}}>
                                                <p class="help-block">Ironic tenant Name. See your automaton.conf file.</p>
                                            </div>

                                            <div class="form-group">
                                                <button type="button" class="btn btn-primary">Update Openstack Credentials</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            {{/showOpenstackSection}}
                            <!--Astra Service Accounts-->
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h4 class="panel-title">
                                        <a data-toggle="collapse" data-parent="#accordion" href="#astra-form-collapse" aria-expanded="false" class="collapsed">Astra Service Accounts</a>
                                    </h4>
                                </div>
                                <div id="astra-form-collapse" class="panel-collapse collapse">
                                    <div class="panel-body" id="astraCredTableDiv">
                                        <form id="astra-profile-form" onsubmit="return false;">
                                            <div class="form-group">
                                                <label>Default Astra Service Account ID</label>
                                                <input id="default_astra_service_account" class="form-control" name="defaultAstraServiceAccountName" {{#user}}value="{{defaultAstraServiceAccountName}}"{{/user}} readonly>
                                                <p class="help-block">Must match the client ID of one of the Astra Service Accounts below. See your automaton.conf file. </p>
                                                <button class="btn btn-primary" data-toggle="modal" data-target="#astraCredModal">
                                                    Add Astra Service Account
                                                </button>
                                                {{#user}}
                                                    <table class="table table-bordered table-striped" id="astraCredTable">
                                                        <thead>
                                                        <tr>
                                                            <th>Client Name</th>
                                                            <th>Client Id</th>
                                                            <th>Actions</th>
                                                        </tr>
                                                        </thead>
                                                        {{#astraServiceAccounts}}
                                                            <tbody>
                                                            <td>{{clientName}}</td>
                                                            <td>{{clientId}}</td>
                                                            <td>
                                                                <a title="Set as Default" class="btn btn-success btn-xs"
                                                                   onclick="setDefaultAstraServiceAccount('{{clientName}}')">
                                                                    <i class="fa fa-flag"></i>
                                                                </a>
                                                                <a title="Delete Credentials" class="btn btn-danger btn-xs"
                                                                   onclick="deleteAstraServiceAccount('{{clientName}}')">
                                                                    <i class="fa fa-trash-o"></i>
                                                                </a>
                                                            </td>
                                                            </tbody>
                                                        {{/astraServiceAccounts}}
                                                    </table>
                                                {{/user}}
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <!--Backup Service Credentials-->
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h4 class="panel-title">
                                        <a data-toggle="collapse" data-parent="#accordion" href="#backupService-form-collapse"
                                           aria-expanded="false" class="collapsed">Backup Service Credentials</a>
                                    </h4>
                                </div>
                                <div id="backupService-form-collapse" class="panel-collapse collapse">
                                    <div class="panel-body" id="backupServiceCredTableDiv">
                                        <form id="backupService-form" onsubmit="return false;">
                                            <div class="form-group">
                                                <label>Default Backup Service Credentials</label>
                                                <input id="default_backup_service_cred" class="form-control"
                                                       name="defaultbackupServiceCred"
                                                       {{#user}}value="{{defaultBackupServiceCred}}"{{/user}} readonly>
                                                <p class="help-block">Must match the name of one of the backup service credentials
                                                    below. See
                                                    <a href="https://datastax.jira.com/wiki/spaces/EN/pages/1080001788/Nebula+Swift+clients#s3cmd">https://datastax.jira.com/wiki/spaces/EN/pages/1080001788/Nebula+Swift+clients#s3cmd</a>
                                                    for help with generating your credentials.
                                                </p>
                                                <button class="btn btn-primary" data-toggle="modal"
                                                        data-target="#backupServiceCredModal">
                                                    Add Backup Service Credentials
                                                </button>
                                                {{#user}}
