                                                            <td>{{name}}</td>
                                                            <td>{{s3AccessKey}}</td>
                                                            <td>
                                                                <a title="Set as Default" class="btn btn-success btn-xs"
                                                                   onclick="setDefaultbackupServiceCred('{{name}}')">
                                                                    <i class="fa fa-flag"></i>
                                                                </a>
                                                                <a title="Delete Credentials"
                                                                   class="btn btn-danger btn-xs"
                                                                   onclick="deletebackupServiceCred('{{name}}')">
                                                                    <i class="fa fa-trash-o"></i>
                                                                </a>
                                                            </td>
                                                            </tbody>
                                                        {{/backupServiceCreds}}
                                                    </table>
                                                {{/user}}
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <!--EC2 Credentials-->
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h4 class="panel-title">
                                        <a data-toggle="collapse" data-parent="#accordion" href="#ec2-form-collapse" aria-expanded="false" class="collapsed">EC2 ctool Credentials</a>
                                    </h4>
                                </div>
                                <div id="ec2-form-collapse" class="panel-collapse collapse">
                                    <div class="panel-body">
                                        <form id="ec2-profile-form" onsubmit="return false;">
