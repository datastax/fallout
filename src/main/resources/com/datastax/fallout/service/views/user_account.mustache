                setDefaultCreds("nebula_app_creds_default", {projectName: project}, "nebula_project_name",
                    "default_nebula_project_name");
            }

            function setDefaultServiceAccount(email) {
                setDefaultCreds("google_cloud_service_account_default", {email: email},
                    "googleCloud_project_name", "default_google_cloud_service_account_email");
            }

            function setDefaultbackupServiceCred(name) {
                setDefaultCreds("backup_service_creds_default", {backupServiceName: name},
                    "default_backup_service_cred", "backup_service_creds_default");
            }

            function deleteNebulaAppCreds(project, id) {
                var confirmMessage = "Delete app creds " + id + " for project " + project + " ?";
                deleteCreds("nebula_app_creds", {appCredsId: id}, confirmMessage, "appCredTableDiv");
            }

            function deleteServiceAccount(email) {
                var confirmMessage = "Delete Google service account " + email + "?";
                deleteCreds("google_cloud_service_account", {email: email}, confirmMessage, "googleCloudTableDiv");
            }

            function deleteAstraServiceAccount(clientName) {
                var confirmMessage = "Delete Astra Service Account " + clientName + "?";
                deleteCreds("astra_service_account", {clientName:clientName}, confirmMessage, "astraCredTableDiv");
            }

            function deletebackupServiceCred(name) {
                var confirmMessage = "Delete backupService credential " + name + "?";
                deleteCreds("backup_service_creds", {backupServiceName:name}, confirmMessage, "backupServiceCredTableDiv");
            }

            function deleteDockerRegistryCred(dockerRegistry) {
                var confirmMessage = "Delete Docker Registry credential " + dockerRegistry + "?";
                deleteCreds("docker_registry_creds", {dockerRegistry:dockerRegistry}, confirmMessage, "dockerRegistryCredTableDiv");
            }

            $(function() {
                $("form button").click(function(){
                    var form = $(this).parents("form");

                    $.ajax({
                        url: "/account/profile",
                        type: "POST",
                        data: $(form).serialize(),
                        success: showSuccessAndMaybeClearInputs(form),
                        error: showAjaxErrorMessage
                    })
                });

                $(".form-control, input[name=group]").change(function(){
                    if( $(this).is("input[name=group]") ) {
                        $(".highlighted-radio-label").removeClass("highlighted-radio-label");
                        $(this).parent("label").addClass("highlighted-radio-label");
                    }
                    else {
                        $(this).css("border-color", "red");
                    }

                    $(this).data('changed', true);
                    $(window).bind('beforeunload', function(){
                        return true;
                    });
                });
            });
